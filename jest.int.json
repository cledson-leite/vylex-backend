{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testEnvironment": "node",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.controller.(t|j)s"],
    "coverageDirectory": "../coverage"
  }